@model OnlineTicketBookingSystem.Models.UserAccount

@{
    ViewBag.Title = "ShowAllUserDetails";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAllCustomerDetails</title>
    <link href="~/CSSStyle/AdminStyle.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <style>
        #RedMenu {
            background-color: #B00;
            border-color: #B00;
            margin-bottom: 10px;
        }

            #RedMenu ul li a {
                color: #ffffff;
            }

        #Logo {
            margin-bottom: 10px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" id="RedMenu">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="#" class="navbar-brand" id="Logo">
                    <img src="~/Images/sfclogo.jpg" height="35" />
                </a>
            </div>
            <ul class="nav navbar-nav navbar-left">
                <li>@Html.ActionLink("Welcome Admin", "UserDisplay", "Admin")</li>
            </ul>
        </div>
    </nav>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                
                <th></th>
            </tr>

            @foreach (var item in Model.ShowallUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserID },
                       new { onclick = "return confirm('Are you sure that you want to delete?');" })
                    </td>
                </tr>
            }

        </table>
    </body>
</html>