@model IEnumerable<OnlineTicketBookingSystem.Models.ImagesMovie>

@{
    ViewBag.Title = "GetImages";
}

<h2>Movies</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.MovieImage.Replace("~","")" style="width:100px;height:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Add movie", "Add Image")
</p>
